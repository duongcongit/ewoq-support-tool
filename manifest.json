{
    "name": "EWOQ support tool",
    "action": {
        "default_icon": "./icon/icon_manual.png"
    },
    "manifest_version": 3,
    "version": "2.0",
    "description": "",
    "permissions": [
        "activeTab",
        "scripting",
        "contextMenus",
        "storage",
        "tabs",
        "alarms",
        "history",
        "webNavigation",
        "notifications"
    ],
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": [
                "https://rating.ewoq.google.com/*",
                "file:///media/duongcong/Data/Cong/Web/auto-count-extension/test.html",
                "http://127.0.0.1:5500/test.html"
            ],
            "css": [
                "./assets/css/count-notify.css"
            ],
            "js": [
                "ewoq.js"
            ]
        }
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*",
        "*://*/*",
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
          "resources": [ 
            "/res/sounds/*.mp3"
          ],
          "matches": [ "<all_urls>" ]
        }
    ]    
}