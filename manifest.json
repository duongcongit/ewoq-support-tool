{
    "name": "EWOQ support tool",
    "action": {
        "default_icon": "./icon/icon_manual.png"
    },
    "manifest_version": 3,
    "version": "2.1",
    "description": "",
    "permissions": [
        "activeTab",
        "scripting",
        "contextMenus",
        "storage",
        "tabs",
        "alarms",
        "history",
        "webNavigation",
        "notifications"
    ],
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": [
                "https://rating.ewoq.google.com/*"
            ],
            "css": [
                "./assets/css/ewoq.css"
            ],
            "js": [
                "ewoq.js"
            ]
        }
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*",
        "*://*/*",
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "/res/sounds/*.mp3",
                "USERGUIDE.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}